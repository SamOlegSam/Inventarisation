@model Inventariz.Models.trl_tank

<div class="modal-header" style="text-align: center; background-color: #D0EDFE; border-radius:5px;">
    <h5> Редактирование резервуара</h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="ID" value="@Model.ID" />

    <label>Номер резрвуара</label>
    <input type="text" class="form-control btn-block" id="NumberRezEdit" value="@Model.TankID" />

    <label>Наименование</label>
    <input type="text" class="form-control btn-block" id="NameRezEdit" value="@Model.Name" />

    <label>Тип резервуара</label>
    @Html.DropDownList("typeEdit", ViewBag.rez1 as SelectList, "Выберите тип", new { @class = "form-control btn-block", id = "typeRezEdit" })

    <label>Минимально допустимый уровень</label>
    <input type="text" class="form-control btn-block" id="LevelRezEdit" value="@Model.MinDopLevel" onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');" />

    <label>минимально допустимый объём</label>
    <input type="text" class="form-control btn-block" id="VRezEdit" value="@Model.MinDopVol" onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');" />

</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="RezerEditSave(@Model.ID)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>






