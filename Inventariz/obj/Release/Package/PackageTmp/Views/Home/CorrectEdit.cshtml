@model Inventariz.Models.Correct

<div class="modal-header" style="text-align: center; background-color: #D0EDFE; border-radius:5px;">
    <h5> Редактирование корректировки</h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="ID" value="@Model.id" />

    <label>Резервуар</label>
    @Html.DropDownList("name", ViewBag.cor1 as SelectList, "Выберите резервуар", new { @class = "form-control btn-block", id = "tankidECor" })

    <label>Уровень</label>
    <input type="text" class="form-control btn-block" id="UrovECor" value="@Model.Uroven" />
        
    <label>Температура</label>
    <input type="text" class="form-control btn-block" id="TempECor" value="@Model.Temp" onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');" />

</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="CorrectEditSave(@Model.id)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>







