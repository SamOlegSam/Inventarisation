@model IEnumerable<Inventariz.Models.Correct>
<h3>Таблица корректировок ЛПДС Полоцк</h3>
<hr>

<div id="ServicesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" id='ServicesModalContent'>

        </div>
    </div>
</div>

<div id="ServicesModalDelete" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id='ServicesModalDeleteContent'>

        </div>
    </div>
</div>
<style type="text/css">
    TH {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<p>
    <button type="button" class="btn btn-gradient waves-light waves-effect w-xs" onclick="AddCorrectNovop(0)"><i class="mdi mdi-library-plus"></i> Добавить корректировку</button>
</p>

<table class="table">
    <tr>
        <th>
            Резервуар
        </th>

        <th>
            Уровень
        </th>

        <th>
            Температура
        </th>

        <th>
            &nbsp;
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tankid)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Uroven)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temp)
            </td>

            <td>
                <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="CorrectEdit(@item.id)"> <i class="mdi mdi-settings"></i>Редактировать</button>
                <button type="button" class="btn btn-icon waves-effect waves-light btn-danger" onclick="DeleteCorrect(@item.id)"> <i class="mdi mdi-delete"></i>Удалить</button>
            </td>
        </tr>
    }

</table>
