@model Inventariz.Models.ResursiNefti

<div class="modal-header" style="text-align: center; background-color: #D0EDFE; border-radius:5px;">
    <h5> Редактирование ресурса хранения нефти</h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="ID" value="@Model.id" />
        
    <label>Наименование</label>
    <input type="text" class="form-control btn-block" id="Naimen" value="@Model.Naimenovanie" />

    <label>Объем нефти, тонн</label>
    <input type="text" class="form-control btn-block" id="VResurs" value="@Model.VNefti" onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');"/>

</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="ResursyEditSave(@Model.id)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>





